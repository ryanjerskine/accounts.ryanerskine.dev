@using IdentityServer4.Extensions
@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - ryanerskine.dev</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css?v4" />
    </environment>
    <environment exclude="Development">
        <inline-content href="~/css/site.css"></inline-content>
    </environment>
    @RenderSection("Styles", false)
</head>
<body>
    <div class="body-content">
        @RenderBody()
    </div>
    <environment include="Development">
        <script type="text/javascript" src="~/js/site.js?v4"></script>
    </environment>
    <environment exclude="Development">
        <inline-content href="~/js/site.js"></inline-content>
    </environment>
    @RenderSection("scripts", required: false)
</body>
</html>
